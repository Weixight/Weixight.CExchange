@model Weixight.CExchange.AgricGator.Models.NewsItems

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdLayout.cshtml";
}

<div class="content container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <h4 class="page-title">Compose</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="card-box">
                <form asp-action="Create" asp-controller="NewsItems"  method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" asp-for="Tittle" class="form-control">
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" asp-for="Highlight" class="form-control">
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="file" asp-for="Picture" class="form-control file-upload-area" placeholder="Upload Picture">
                            </div>
                        </div>

                    </div>


                    <div class="form-group">
                        <textarea rows="4" cols="5" asp-for="Details" class="form-control summernote" placeholder="Enter your message here"></textarea>
                    </div>

                    <div class="form-group m-b-0">
                        <div class="text-center">
                            <input type="submit" class="btn btn-primary fa fa-send m-l-5">
                            <button class="btn btn-success m-l-5" type="button"><span>Draft</span> <i class="fa fa-floppy-o m-l-5"></i></button>
                            <button class="btn btn-success m-l-5" type="button"><span>Delete</span> <i class="fa fa-trash-o m-l-5"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
